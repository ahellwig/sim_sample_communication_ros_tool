<launch>

   <!-- Arguments that are passed from the top launchfile -->
   <!-- Vehicle-related arguments -->
   <arg name="vehicle_id" />
   <arg name="vehicle_ns" />

   <!-- Namespace-related arguments -->
   <arg name="objects_ground_truth_topic_with_ns" />
   <arg name="internal_communication_subns" />
   <arg name="global_communication_ns" />

   <!-- Topic-related arguments -->
   <arg name="car2x_topic1" default="dummy_car2x_topic1"/>
   <arg name="car2x_topic2" default="dummy_car2x_topic2"/>
   <arg name="car2x_topic3" default="dummy_car2x_topic3"/>


    <!-- LAUNCH NODES -->
    <!-- For Car2X-Topic 1 -->
    <node pkg="sim_sample_communication_ros_tool" type="comm_module" name="com_mgmt_$(arg car2x_topic1)" output="screen">

            <remap from="default_communication_external_topic" to="/$(arg global_communication_ns)/$(arg car2x_topic1)" />
            <remap from="default_communication_internal_in_topic" to="/$(arg vehicle_ns)/$(arg internal_communication_subns)/in/$(arg car2x_topic1)" />
            <remap from="default_communication_internal_out_topic" to="/$(arg vehicle_ns)/$(arg internal_communication_subns)/out/$(arg car2x_topic1)" />

            <!-- Vehicle-related -->
            <param name="vehicle_id" value="$(arg vehicle_id)" />
            <param name="vehicle_ns" value="$(arg vehicle_ns)" />

    </node>

    <!-- For Car2X-Topic 2 -->
    <node pkg="sim_sample_communication_ros_tool" type="comm_module" name="com_mgmt_$(arg car2x_topic2)" output="screen">

            <remap from="default_communication_external_topic" to="/$(arg global_communication_ns)/$(arg car2x_topic2)" />
            <remap from="default_communication_internal_in_topic" to="/$(arg vehicle_ns)/$(arg internal_communication_subns)/in/$(arg car2x_topic2)" />
            <remap from="default_communication_internal_out_topic" to="/$(arg vehicle_ns)/$(arg internal_communication_subns)/out/$(arg car2x_topic2)" />

            <!-- Vehicle-related -->
            <param name="vehicle_id" value="$(arg vehicle_id)" />
            <param name="vehicle_ns" value="$(arg vehicle_ns)" />

    </node>

    <!-- For Car2X-Topic 3 -->
    <node pkg="sim_sample_communication_ros_tool" type="comm_module" name="com_mgmt_$(arg car2x_topic3)" output="screen">

            <remap from="default_communication_external_topic" to="/$(arg global_communication_ns)/$(arg car2x_topic3)" />
            <remap from="default_communication_internal_in_topic" to="/$(arg vehicle_ns)/$(arg internal_communication_subns)/in/$(arg car2x_topic3)" />
            <remap from="default_communication_internal_out_topic" to="/$(arg vehicle_ns)/$(arg internal_communication_subns)/out/$(arg car2x_topic3)" />

            <!-- Vehicle-related -->
            <param name="vehicle_id" value="$(arg vehicle_id)" />
            <param name="vehicle_ns" value="$(arg vehicle_ns)" />

    </node>

</launch>
